<!DOCTYPE html>
<html>
  <head>
    <title>RailsWikinimous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href='https://fonts.googleapis.com/css?family=Roboto Slab' rel='stylesheet'>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container parallax">
    <div class="header">
      <h1><%= link_to 'Wikinimous', articles_path, class: "wikiHeader" %></h1>
      <%= link_to '<i class="fas fa-plus"></i> New article'.html_safe, new_article_path, class: "wikiHeader" %>
    </div>
    <div class="railsContainer">
      <%= yield %>
    </div>
  </body>
</html>
